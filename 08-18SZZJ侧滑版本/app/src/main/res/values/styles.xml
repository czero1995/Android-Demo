<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/mainblue</item>
        <item name="colorPrimaryDark">@color/mainblue</item>
        <item name="colorAccent">@color/orangeyellow</item>


    </style>
    <style name="Theme.Transparent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <style name="FitSystemWindows">
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:clipToPadding">false</item>
    </style>
    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowActionBar">false</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="MenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">@color/bantouming</item>
        <item name="fab_colorPressed">@color/fab_menu_colorPressed</item>
        <item name="fab_colorRipple">@color/fab_menu_colorRipple</item>
    </style>

    <style name="mid_white">
        <item name="android:lineSpacingExtra">6px</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#ddffffff</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="login_edittext_hint_text_appearance">
        <item name="android:lineSpacingExtra">6px</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white_little_alpha</item>
    </style>
    <style name="edittext_hint_text_appearance">
        <item name="android:lineSpacingExtra">6px</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/primary_color</item>
    </style>
</resources>
