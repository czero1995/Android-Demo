<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp">
    <TextView
        android:paddingTop="30sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="短号查长号:"
        android:textColor="#ff8833"
        android:textSize="20sp"/>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <EditText
        android:id="@+id/etsearchlongphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:inputType="number"
        android:hint="输入要查询的短号"/>
    <Button
        android:id="@+id/searchlongphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:background="@drawable/shape_left_radius_color_square"/>
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/resultlongphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"/>
    <TextView
        android:paddingTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="长号查短号:"
        android:textColor="#ff8833"
        android:textSize="20sp"/>
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/searchshortphone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="点击查询本机短号"
            android:background="@drawable/shape_left_radius_color_square"/>
    </LinearLayout>
    <TextView
        android:paddingTop="10dp"
        android:id="@+id/resultshortphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"/>
</LinearLayout>
