<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp" >

    <!-- 商铺展示主图  96x96 -->

    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="76dp"
        android:layout_height="56dp"
        android:background="@drawable/ic_app"
        android:contentDescription="商店展示主图" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignBaseline="@id/img_shop"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_shop"
        android:background="#F5F5F5"
        android:padding="5dp" >

        <!-- 店铺名 -->

        <TextView
            android:id="@+id/tv_shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="韩式石锅拌饭"
            android:textSize="16sp" />

        <!-- 活动标志/劵 -->

        <TextView
            android:id="@+id/tv_shop_paper"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBaseline="@id/tv_shop_name"
            android:layout_margin="2dp"
            android:layout_toRightOf="@id/tv_shop_name"
            android:background="#008000"
            android:gravity="center_vertical"
            android:visibility="gone"
            android:text="劵"
            android:textColor="#F8F8FF"
            android:textSize="12sp"
            android:typeface="monospace" />

        <!-- 活动标志/折 -->

        <TextView
            android:id="@+id/tv_shop_discount"
            android:layout_width="25dp"
            android:layout_height="15dp"
            android:background="#FF4500"
            android:gravity="center"
            android:text="Hot"
            android:textColor="#F8F8FF"
            android:textSize="12sp"
            android:typeface="monospace"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tv_shop_name" />

        <!-- 店铺类型 -->

        <TextView
            android:id="@+id/tv_shop_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_shop_name"
            android:layout_centerVertical="true"
            android:text="正门"
            android:textColor="#808080"
            android:textSize="12sp" />

        <!-- 店铺地点 -->
<ImageView
    android:layout_width="20dp"
    android:layout_height="20dp"
    android:src="@drawable/ic_phone3"
    android:id="@+id/imageView"
    android:layout_marginRight="3dp"
    android:layout_alignTop="@+id/tv_waimai_phone2"
    android:layout_alignStart="@+id/tv_shop_paper" />

        <TextView

            android:id="@+id/tv_waimai_phone1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="698979"
            android:textColor="#B8860B"
            android:textSize="12sp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imageView" />
        <TextView
            android:layout_marginLeft="40dp"
            android:id="@+id/tv_waimai_phone2"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content"
            android:text="13417020636"
             android:textColor="#B8860B"
             android:textSize="12sp"
            android:layout_marginStart="18dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/tv_waimai_phone1" />

        <!-- 评分 #F8F8FF -->

        <RatingBar
            android:id="@+id/rb_rate"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:rating="3.5" />
    </RelativeLayout>

</RelativeLayout>