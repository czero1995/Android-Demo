<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/twoleft_fragment"
        android:name="com.example.czero.grammarjob.TwoLeftFragment"/>

    <FrameLayout
        android:id="@+id/tworight_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <fragment
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tworight_fragment"
            android:name="com.example.czero.grammarjob.TwoRightFragment"/>
    </FrameLayout>

</LinearLayout>
